{
    "type": "object",
    "additionalProperties": false,
    "required": [
        "floors",
        "enemies",
        "items",
        "loot_tables"
    ],
    "properties": {
        "floors": {
            "type": "array",
            "minItems": 2,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "name",
                    "size"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "size": {
                        "type": "string",
                        "pattern": "^(\\d+x?\\d+|\\d)$"
                    },
                    "enemy_table": {
                        "description": "Used to tell what loot table to use to spawn enemies.\nFloors without a loot table wont spawn enemies (TODO)",
                        "type": "string",
                        "pattern": "^[$][A-Za-z_]*$"
                    }
                }
            }
        },
        "enemies": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": false,
            "patternProperties": {
                "^#[A-Za-z_$0-9]*$": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "class",
                        "name",
                        "description",
                        "loot_table"
                    ],
                    "properties": {
                        "class": {
                            "enum": [
                                "undead"
                            ]
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "loot_table": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "items": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": false,
            "patternProperties": {
                "^[A-Za-z_$0-9]*$": {
                    "type": "object",
                    "required": [
                        "type",
                        "rarity",
                        "name",
                        "description"
                    ],
                    "properties": {
                        "type": {
                            "enum": [
                                "equipment",
                                "crafting",
                                "consumable"
                            ]
                        },
                        "rarity": {
                            "enum": [
                                "cursed",
                                "normal",
                                "advanced",
                                "epic",
                                "legendary"
                            ]
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        }
                    },
                    "if": {
                        "properties": {
                            "type": {
                                "const": "equipment"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "meta"
                        ],
                        "properties": {
                            "meta": {
                                "type": "object",
                                "additionalProperties": false,
                                "required": [
                                    "type",
                                    "inner_type",
                                    "sub_type"
                                ],
                                "properties": {
                                    "type": {
                                        "enum": [
                                            "armor",
                                            "weapon"
                                        ]
                                    },
                                    "inner_type": {
                                        "enum": [
                                            "sword",
                                            "bow"
                                        ]
                                    },
                                    "sub_type": {
                                        "enum": [
                                            "normal",
                                            "magic"
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "loot_tables": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": false,
            "patternProperties": {
                "^[$][A-Za-z_]*$": {
                    "type": "array",
                    "minLength": 1,
                    "items": {
                        "type": "object",
                        "required": [
                            "id",
                            "unique",
                            "always",
                            "probability",
                            "enabled"
                        ],
                        "properties": {
                            "type": {
                                "enum": [
                                    "item",
                                    "table",
                                    "enemy"
                                ]
                            },
                            "id": {
                                "type": "string"
                            },
                            "unique": {
                                "type": "boolean"
                            },
                            "always": {
                                "type": "boolean"
                            },
                            "probability": {
                                "type": "number"
                            },
                            "enabled": {
                                "type": "boolean"
                            }
                        },
                        "if": {
                            "properties": {
                                "always": {
                                    "const": true
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "amount": {
                                    "description": "The amount of items to add to the result when hitting the always check.\nDefaults to: 1",
                                    "type": "number",
                                    "minimum": 1
                                },
                                "droppable": {
                                    "description": "Wether the item should still be droppable or not.\nDefaults to: false",
                                    "type": "boolean"
                                },
                                "inclusive": {
                                    "description": "Wether the amount will be counted torwards the real drop count.\nDefaults to: true",
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}