{
    "cSpell.words": [
        "Aitark",
        "Heterized",
        "lilybird",
        "waveworn"
    ],
    "typescript.tsdk": "node_modules/typescript/lib",
    "eslint.useFlatConfig": true,
    "eslint.format.enable": true,
    "eslint.enable": true,
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "json.schemas": [
        {
            "fileMatch": [
                "/config/floors.json"
            ],
            "url": "/.vscode/schemas/floors.schema.json",
        },
        {
            "fileMatch": [
                "/config/enemies/*.json"
            ],
            "url": "/.vscode/schemas/enemy.schema.json",
        },
        {
            "fileMatch": [
                "/config/items/*.json"
            ],
            "url": "/.vscode/schemas/item.schema.json",
        },
        {
            "fileMatch": [
                "/config/tables/*.json"
            ],
            "url": "/.vscode/schemas/table.schema.json",
        },
    ]
}